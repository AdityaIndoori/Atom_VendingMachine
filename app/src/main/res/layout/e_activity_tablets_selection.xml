<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tablet_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.vendicinefinal.eTabletsSelection">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/doc_blur" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:gravity="center"
        android:text="Choose desired Tablets: "
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tablet4rel"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#5b0099cc"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="tablet4Click">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/table4timage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/okacetcold" />

                <TextView
                    android:id="@+id/tablet4_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="OKACET COLD"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="treats common cold"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tablet4_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹ 40"
                    android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tablet3rel"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#5b0099cc"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="tablet3Click">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/table3timage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/metrogyl" />

                <TextView
                    android:id="@+id/tablet3_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="METROGYL - 400"
                    android:textSize="33sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" treats stomach ache "
                    android:textSize="30dp"
                    android:textStyle="italic"></TextView>

                <TextView
                    android:id="@+id/tablet3_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹ 20"
                    android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tablet5rel"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#5b0099cc"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="tablet5Click">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/table5timage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/eldoper" />

                <TextView
                    android:id="@+id/tablet5_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ELDOPER"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="controls loose motions "
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tablet5_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹ 40"
                    android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tablet2rel"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#5b0099cc"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="tablet2Click">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/table2timage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dolo650" />

                <TextView
                    android:id="@+id/tablet2_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="DOLO - 650"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="treats fever and body pains"
                    android:textSize="30dp"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/tablet2_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹ 20"
                    android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tablet6rel"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#5b0099cc"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="tablet6Click">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/table6timage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/gelusil" />

                <TextView
                    android:id="@+id/tablet6_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="GELUSIL"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Treating acid indigestion, heartburn and gas"
                    android:textSize="29dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tablet6_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹ 30"
                    android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tablet1rel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="0"
            android:background="#5b0099cc"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="tablet1Click">

            <ImageView
                android:id="@+id/table1timage"
                android:layout_width="?android:attr/listPreferredItemHeight"
                android:layout_height="match_parent"
                android:src="@drawable/commontablet1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/table1timage"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tablet1_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="PARACIP - 500"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="fever, headache and body pains"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tablet1_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹ 20"
                    android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tablet7rel"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#5b0099cc"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="tablet7Click">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/table7image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/meftalspas" />

                <TextView
                    android:id="@+id/tablet7_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="MEFTAL SPAS"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="removes pain and relieves spasms"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tablet7_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="₹ 40"
                    android:textSize="40sp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.3"
            android:background="@color/COntinueButton"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:onClick="exitActiv"
            android:text="Click here to go Back"
            android:textSize="40dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
