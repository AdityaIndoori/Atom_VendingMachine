<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_popup_quantity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.vendicinefinal.PopupQuantity"
    android:background="@color/PopUpBG">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/tabletImg"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabletImg"
        android:layout_alignParentLeft="true"
        android:id="@+id/NameStr"
        android:textSize="40sp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_margin="12dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="40sp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:layout_below="@id/tabletImg"
        android:layout_toRightOf="@id/NameStr"/>

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PriceStr"
        android:layout_below="@+id/name"
        android:textSize="40sp"
        android:gravity="center_vertical"
        android:layout_margin="12dp"
        android:padding="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="40sp"
        android:layout_toRightOf="@id/PriceStr"
        android:layout_below="@id/name"
        android:layout_margin="12dp"
        android:gravity="center"
        android:padding="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QuantityStr"
        android:layout_below="@id/PriceStr"
        android:textSize="40sp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:text="Quantity: "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quantityIndicator"
        android:textSize="40sp"
        android:layout_toRightOf="@id/QuantityStr"
        android:layout_below="@id/price"
        android:layout_margin="12dp"
        android:gravity="center"
        android:padding="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MfgStr"
        android:layout_below="@id/QuantityStr"
        android:textSize="40sp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:text="Mfg Date: "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Mfgdate"
        android:textSize="40sp"
        android:layout_toRightOf="@id/MfgStr"
        android:layout_below="@id/quantityIndicator"
        android:layout_margin="12dp"
        android:gravity="center"
        android:padding="8dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ExpStr"
        android:layout_below="@id/MfgStr"
        android:textSize="40sp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:text="Exp Date: "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Expdate"
        android:textSize="40sp"
        android:layout_toRightOf="@id/ExpStr"
        android:layout_below="@id/Mfgdate"
        android:layout_margin="12dp"
        android:gravity="center"
        android:padding="8dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ExpStr"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:text="Confirm"
        android:textSize="42sp"
        android:padding="22dp"
        android:onClick="confirmation"
        android:background="@color/ConfirmBtn"
        android:textColor="@android:color/background_light" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="X"
        android:gravity="center"
        android:textSize="35sp"
        android:background="@color/xBtn"
        android:onClick="exitAct"
        android:fontFamily="serif-monospace"/>



</RelativeLayout>
