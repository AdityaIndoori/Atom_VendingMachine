<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_other_selection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/PopUpBG"
    tools:context="com.example.aditya.vendicinefinal.otherSelection">

    <ImageView
        android:id="@+id/otherItemImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/otherItemImage"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="Name: "
        android:textSize="40sp" />

    <TextView
        android:id="@+id/otherItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView12"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/textView12"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otherItemName"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="Price: "
        android:textSize="40sp" />


    <TextView
        android:id="@+id/otherItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView13"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/textView13"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView13"
        android:layout_margin="12dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Quantity: "
        android:textSize="40sp" />

    <TextView
        android:id="@+id/otherItemQuant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView14"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/textView14"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/MfgStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:layout_margin="12dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Mfg Date: "
        android:textSize="40sp" />

    <TextView
        android:id="@+id/MfgDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/MfgStr"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/MfgStr"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/ExpStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MfgStr"
        android:layout_margin="12dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Exp Date: "
        android:textSize="40sp" />

    <TextView
        android:id="@+id/ExpDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ExpStr"
        android:layout_margin="12dp"
        android:layout_toRightOf="@id/ExpStr"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="40sp" />

    <Button
        android:id="@+id/otherItemConfirm"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/ExpStr"
        android:layout_margin="15dp"
        android:background="@color/ConfirmBtn"
        android:onClick="otherConf"
        android:text="Confirm"
        android:textColor="@android:color/background_light"
        android:textSize="35sp" />


    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/xBtn"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:onClick="exitActi"
        android:text="X"
        android:textSize="35sp"

        />


</RelativeLayout>
